<Window x:Class="Registermaschiene.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Registermaschiene"
        mc:Ignorable="d"
        Title="Registermaschiene" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textBox" TextChanged="textChangedEventHandler" Grid.Row="0"  VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Width="Auto" Height="Auto"  Margin="5,40,5,5" TextWrapping="Wrap"  />
        <Button x:Name="button" Content="Code ausführen" HorizontalAlignment="Center" Margin="20,2,20,2" Grid.Row="1" VerticalAlignment="Top" Click="runCode"/>

    </Grid>
</Window>
